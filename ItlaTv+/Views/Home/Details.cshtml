@model Application.ViewModels.SaveSerieViewModel

<div class="container mt-5 d-flex flex-column justify-content-center text-center">
    <div class="card shadow bg-dark m-3">
        <div class="card-body text-light">
            <h2 class="card-title">@Model.Name</h2>
        </div>
    </div>

    <div class="embed-responsive embed-responsive-16by9">
        <!-- Aquí puedes insertar tu reproductor de video -->
        <!-- Por ejemplo, si estás usando YouTube, puedes insertar un iframe de YouTube: -->
        <iframe class="embed-responsive-item" width="1280" height="720" src="@Model.VideoLink" frameborder="0" allowfullscreen></iframe>
    </div>
</div>